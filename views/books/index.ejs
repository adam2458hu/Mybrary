<h2>Search Books</h2>
<form action="/books" method="get">
	<div>
		<label for="title">Title</label>
		<input type="text" name="title" id="title" value="<%= searchOptions.title %>">
	</div>
	<div>
		<label for="pafter">Published After</label>
		<input type="date" name="publishedAfter" id="pafter" value="<%= searchOptions.publishedAfter %>">
	</div>
	<div>
		<label for="pbefore">Published Before</label>
		<input type="date" name="publishedBefore" id="pbefore" value="<%= searchOptions.publishedBefore %>">
	</div>
	<button type="submit">Search</button>
</form>
<br>
<% books.forEach(book=> { %>
	<img height="150" width="100" src="<%= book.coverImagePath %>" alt="">
<% }) %>